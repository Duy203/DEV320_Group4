<!-- views/pages/userEvents.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Events</title>
    <!-- Add any CSS or other meta tags here -->
</head>
<body>
    <h1>Events</h1>
    <% event.forEach(event => { %>
        <li>
            <h2><%= event.name %></h2>
            <p><strong>Location:</strong> <%= event.location %></p>
            <p><strong>Date:</strong> <%= new Date(event.date).toLocaleString() %></p>
            <% if (event.host) { %>
                <p><strong>Host:</strong> <%= event.host %></p>
            <% } %>
            <% if (event.additionalMessage) { %>
                <p><strong>Additional Message:</strong> <%= event.additionalMessage %></p>
            <% } %>
        </li>
    <% }); %>
</body>
</html>
