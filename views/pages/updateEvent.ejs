<body>
    <h1>Update Event</h1>
    <form action="/updateEvent/<%= event.id %>" method="post">
        <label for="name">Event Name:</label>
        <input type="text" id="name" name="name" value="<%= event.name %>" required>
        
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= event.location %>" required>
        
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= new Date(event.date).toISOString().slice(0,10) %>" required>
        
        <label for="host">Host:</label>
        <input type="text" id="host" name="host" value="<%= event.host%>" required>

        <label for="additionalMessage">Additional Message:</label>
        <input type="text" id="additionalMessage" name="additionalMessage" value="<%= event.additionalMessage%>" required>

        <input type="submit" value="Update Event">
    </form>
</body>

